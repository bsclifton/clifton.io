<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# strip off www.
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# force https
RewriteCond %{HTTP_HOST} ^clifton\.io [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://clifton.io/$1 [R,L]
</IfModule>

Header always set Access-Control-Allow-Origin "*"

# protect .htaccess
<files ~ "^.*\.([Hh][Tt][Aa])">
order allow,deny
deny from all
satisfy all
</files>

# disable directory browsing
Options All -Indexes