<header>
  <nav id="header" class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand active" href="{{home}}" title="Home">{{author}}</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
        {{#each documents}}
          {{#if this.active}}<li class="active">{{else}}<li>{{/if}}<a href="{{this.href}}" title="{{this.title}}">{{this.id}}</a></li>
        {{/each}}
        </ul>
      </div>
    </div>
  </nav>
